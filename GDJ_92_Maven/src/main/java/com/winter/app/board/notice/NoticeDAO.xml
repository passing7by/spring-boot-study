<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- namespace의 이름은 사용하려는 DAO의 풀패키지명과 동일하게 작성해야 함 -->
  <mapper namespace="com.winter.app.board.notice.NoticeDAO">
   	<resultMap type="NoticeVO" id="detailResult">
  		<id column="BOARD_NUM" property="boardNum"/>
  		
  		<result column="BOARD_TITLE" property="boardTitle"/>
  		<result column="BOARD_CONTENTS" property="boardContents"/>
  		<result column="BOARD_WRITER" property="boardWriter"/>
  		<result column="BOARD_DATE" property="boardDate"/>
  		<result column="BOARD_HIT" property="boardHit"/>
  		
  		<association property="boardFileVO" javaType="BoardFileVO">
  			<id column="FILE_NUM" property="fileNum"/>
  			
  			<result column="ORI_NAME" property="oriName"/>
  			<result column="SAVE_NAME" property="saveName"/>
  		</association>
  	</resultMap>
  
  	<!-- ID는 DAO의 메서드명과 동일하게 작성 -->
  	
<!--   	<sql id="search">
  		<where>
	  		<if test="kind == 'k1'">
	  			BOARD_TITLE
	  		</if>	
	  		<if test="kind == 'k2'">
	  			BOARD_CONTENTS
	  		</if>	
	  		<if test="kind == 'k3'">
	  			BOARD_WRITER
	  		</if>	
  			LIKE CONCAT('%', #{}, '%')
  		</where>
  	</sql> -->
  	<sql id="search">
  		<where>
	  		<choose>
	  			<when test="kind == 'k1'">
	  				BOARD_TITLE
	  			</when>
	  			<when test="kind == 'k2'">
	  				BOARD_CONTENTS
	  			</when>
	  			<otherwise>
	  				BOARD_WRITER
	  			</otherwise>
	  		</choose>
	  		LIKE CONCAT('%', #{keyword}, '%')
  		</where>
  	</sql>
  	
  	<insert id="add" parameterType="NoticeVO" useGeneratedKeys="true" keyProperty="boardNum">
  		INSERT INTO NOTICE (BOARD_NUM, BOARD_TITLE, BOARD_CONTENTS, BOARD_WRITER, BOARD_DATE, BOARD_HIT)
  		VALUES
  		(NULL, #{boardTitle}, #{boardContents}, #{boardWriter}, now(), 0)
  	</insert>
  	
  	<insert id="addFile" parameterType="BoardFileVO">
	  	INSERT INTO NOTICEFILES (ORI_NAME, SAVE_NAME, BOARD_NUM)
		VALUES (#{oriName}, #{saveName}, #{boardNum});
  	</insert>
  	
  	<update id="update" parameterType="NoticeVO">
  		UPDATE NOTICE
  		<set>
  			BOARD_TITLE = #{boardTitle}
  			,BOARD_CONTENTS = #{boardContents}
  		</set>
  		<where>
  			BOARD_NUM = #{boardNum}
  		</where>
  	</update>
  	
  	<delete id="delete" parameterType="NoticeVO">
  		DELETE FROM NOTICE
  		<where>
  			BOARD_NUM = #{boardNum}
  		</where>
  	</delete>
  	
  	<!-- .propertis에 mybatis.configuration.map-underscore-to-camel-case=true 설정해주기 전에는 동작하지 않음 -->
   	<select id="detail" parameterType="NoticeVO" resultMap="detailResult">
  		SELECT N.*, NF.FILE_NUM, NF.ORI_NAME, NF.SAVE_NAME
		FROM NOTICE N
		LEFT JOIN NOTICEFILES NF ON N.BOARD_NUM = NF.BOARD_NUM
		<where>
			N.BOARD_NUM = #{boardNum};
		</where>
  	</select>
  	
  	<!-- .propertis에 mybatis.configuration.map-underscore-to-camel-case=true 설정해주기 전에는 
  		컬럼의 Alias를 camelCase로 일일이 지정해주어야 함 -->
<!--    	<select id="detail" parameterType="NoticeVO" resultType="NoticeVO">
  		SELECT BOARD_TITLE boardTitle
  		FROM NOTICE
  		<where>
  			BOARD_NUM = #{boardNum}
  		</where>
  	</select> -->
  	
  	<select id="list" resultType="NoticeVO" parameterType="Pager">
  		SELECT * FROM NOTICE
  		<include refid="search"/>
  		ORDER BY BOARD_NUM DESC
  		LIMIT #{startIndex}, #{endIndex}
  	</select>
  	
  	<select id="getTotalCount" resultType="Long" parameterType="Pager">
  		SELECT COUNT(BOARD_NUM) FROM NOTICE
  		<include refid="search"/>
  	</select>
  	

  	

  </mapper>