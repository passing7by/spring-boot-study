package com.winter.app.transfer;

import org.aspectj.lang.ProceedingJoinPoint;
import org.aspectj.lang.annotation.After;
import org.aspectj.lang.annotation.Around;
import org.aspectj.lang.annotation.Aspect;
import org.springframework.stereotype.Component;

@Component
@Aspect // 공통 로직을 핵심 로직에 언제 어떻게 사용할 것인지 설정
public class Pay {
	
	@Around("execution (* com.winter.app.transfer.Transfers.take*())")
	public void cardCheck(ProceedingJoinPoint joinPoint) { // ProceedingJoinPoint: 핵심로직 메서드를 객체화시킨 것
		System.out.println("탑승 전 카드 체크");
		
		System.out.println("하차시 카드 체크");
	}
}
