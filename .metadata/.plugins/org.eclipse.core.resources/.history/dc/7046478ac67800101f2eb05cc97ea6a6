<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- namespace의 이름은 사용하려는 DAO의 풀패키지명과 동일하게 작성해야 함 -->
  <mapper namespace="com.winter.app.account.AccountDAO">
  
  	<!-- ID는 DAO의 메서드명과 동일하게 작성 -->
  	<select id="list" resultType="ProductVO">
  		SELECT * FROM PRODUCTS
			ORDER BY PRODUCT_NUM DESC
  	</select>
  	
  	<select id="detail" resultMap="detailResult" parameterType="ProductVO">
  		SELECT *
		FROM PRODUCTS P
			 INNER JOIN 
			 PRODUCTS_KIND PK
		     USING(KIND_NUM)
		WHERE P.PRODUCT_NUM = #{productNum}
  	</select>
  	
  	<insert id="add" parameterType="ProductVO">
  		INSERT INTO PRODUCTS (PRODUCT_NAME, PRODUCT_CONTENTS, PRODUCT_DATE, PRODUCT_RATE, KIND_NUM)
		VALUES (#{productName}, #{productContents}, NOW(), #{productRate}, #{kindNum});
  	</insert>
  	
  	<update id="update" parameterType="ProductVO">
  		UPDATE PRODUCTS
		<set>
			PRODUCT_NAME = #{productName}
			,PRODUCT_CONTENTS = #{productContents}
			,PRODUCT_RATE = #{productRate}
			,KIND_NUM = #{kindNum}
		</set>
		<where>
			PRODUCT_NUM = #{productNum}
		</where>
  	</update>
  	
  	<delete id="delete" parameterType="ProductVO">
  		DELETE FROM PRODUCTS
		<where>
			PRODUCT_NUM = #{productNum}
		</where>
  	</delete>
  </mapper>