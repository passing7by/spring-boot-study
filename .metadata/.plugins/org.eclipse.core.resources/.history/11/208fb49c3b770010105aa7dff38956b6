package com.winter.app.transfer;

import org.aspectj.lang.ProceedingJoinPoint;
import org.aspectj.lang.annotation.Around;
import org.aspectj.lang.annotation.Aspect;
import org.springframework.stereotype.Component;

import lombok.extern.slf4j.Slf4j;

// Aspect: 공통 로직을 핵심 로직에 언제 어떻게 사용할 것인지 설정
@Component
@Aspect
@Slf4j
public class Pay {
	
	@Around("execution (* com.winter.app.transfer.Transfers.takeSubWay(..))")
	public Object cardCheck(ProceedingJoinPoint joinPoint) throws Throwable { // ProceedingJoinPoint: 핵심로직 메서드를 객체화시킨 것
		System.out.println("탑승 전 카드 체크");
		log.info("args{}", joinPoint.getArgs()); // 포인트컷으로 받은 매개변수 확인 가능
		log.info("target {}", joinPoint.getTarget()); // 어떤 클래스인지 확인 가능
		log.info("kind {}", joinPoint.getKind());
		
		Object obj = joinPoint.proceed();
		log.info("return: {}", obj);
		System.out.println("하차시 카드 체크");
		return obj;
	}
}
